{
	"name": "akp-tech-test",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "bunx vite build",
		"dev": "bunx --bun vite --host",
		"start": "bunx prisma migrate deploy && bun ./build/server/index.js",
		"typecheck": "react-router typegen && tsc",
		"format": "bunx biome format --write . && bunx biome lint --write . && bunx biome check --write .",
		"docker:up": "docker-compose up --build",
		"docker:down": "docker-compose down",
		"docker:logs": "docker-compose logs -f",
		"docker:prisma:generate": "docker-compose exec app bunx prisma generate",
		"docker:prisma:format": "docker-compose exec app bunx prisma format",
		"docker:prisma:lint": "docker-compose exec app bunx prisma lint",
		"docker:prisma:studio": "docker-compose exec app bunx prisma studio",
		"docker:prisma:db:push": "docker-compose exec app bunx prisma db push",
		"docker:prisma:db:reset": "docker-compose exec app bunx prisma db reset --force",
		"docker:prisma:db:seed": "docker-compose exec app bun ./prisma/seed.ts"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.3.4",
		"@prisma/client": "^6.8.2",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-slot": "^1.2.3",
		"@react-router/node": "^7.5.3",
		"@react-router/serve": "^7.5.3",
		"@trpc/client": "^11.1.2",
		"@trpc/server": "^11.1.2",
		"better-auth": "^1.2.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"isbot": "^5.1.28",
		"lucide-react": "^0.511.0",
		"motion": "^12.12.2",
		"nanoid": "^5.1.5",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-if": "^4.1.5",
		"react-router": "^7.5.3",
		"react-router-hono-server": "^2.13.0",
		"tailwind-merge": "^3.3.0",
		"vaul": "^1.1.2",
		"zod": "^3.25.23"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@react-router/dev": "^7.5.3",
		"@tailwindcss/vite": "^4.1.4",
		"@types/node": "^20",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"prisma": "^6.8.2",
		"tailwindcss": "^4.1.4",
		"tw-animate-css": "^1.3.0",
		"typescript": "^5.8.3",
		"vite": "^6.3.3",
		"vite-tsconfig-paths": "^5.1.4"
	}
}